{
    "name": "okapi/wildcards",
    "description": "PHP Wildcards is a PHP library that converts wildcards to regular expressions.",
    "version": "1.0.0",
    "type": "library",
    "homepage": "https://github.com/okapi-web/php-wildcards",
    "license": "MIT",
    "authors": [
        {
            "name": "Walter Woshid",
            "email": "wotschel.valentin@googlemail.com",
            "homepage": "https://github.com/WalterWoshid"
        }
    ],
    "keywords": [
        "php",
        "wildcard",
        "wildcards",
        "wildcard matching"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/coverage"
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Okapi\\Wildcards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Okapi\\Wildcards\\Tests\\": "tests/"
        }
    }
}
